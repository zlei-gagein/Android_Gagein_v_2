<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_navigation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    <TextView 
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_hight"
        android:background="@color/text_dark"
        android:textColor="@color/white"
        android:textSize="@dimen/top_text_size"
        android:gravity="center"
        android:text="@string/welcome"/>

    <LinearLayout
        android:id="@+id/linerlayout_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >
    </LinearLayout>
    
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="180dp"
        android:layout_height="@dimen/button_hight"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linerlayout_circle"
        android:layout_marginBottom="40dp"
        android:background="@drawable/yellow_button"
        android:paddingBottom="4dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size" />
    

</RelativeLayout>