    <include layout="@layout/lines"/>
    
    <RelativeLayout 
        android:id="@+id/jobLevel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_hight"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        
        <TextView 
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/job_level"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/edit_text_size"/>
        
        <Button 
            android:id="@+id/jobLevelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_weak"
            android:textSize="@dimen/edit_text_size"
            android:drawableRight="@drawable/button_chevron"
            android:drawablePadding="15dp"
            android:background="@null"
            />
        
    </RelativeLayout>
    
    <include layout="@layout/lines"/>
    
    <RelativeLayout 
        android:id="@+id/functionalRole"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_hight"
