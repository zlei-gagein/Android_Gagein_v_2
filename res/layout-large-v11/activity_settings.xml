<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <include 
        android:id="@+id/top"
        layout="@layout/top"/>
    
    <ScrollView 
        android:layout_below="@id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="1dp"
        android:scrollbars="none">        
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingBottom="100dp"
	        >
	        
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginTop="@dimen/margin_top"
		        android:background="@color/white">
		        
		        <include layout="@layout/lines"/>
		        
		        <Button 
		            android:id="@+id/myAccountBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:paddingLeft="@dimen/padingleft"
		            android:text="@string/u_account"
		            android:textColor="@color/white"
		            android:textSize="@dimen/button_text_size"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            android:background="@color/yellow"
		            />
		        
		    	<include layout="@layout/lines"/>
		    
		    	<Button 
		            android:id="@+id/newsFilterBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:paddingLeft="@dimen/padingleft"
		            android:text="@string/triggerchart"
		            android:textColor="@color/text_dark"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
		    	
		    	<Button 
		            android:id="@+id/shareBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:paddingLeft="@dimen/padingleft"
		            android:text="@string/share"
		            android:textColor="@color/text_dark"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
		    	
		    	<Button 
		            android:id="@+id/rateBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:paddingLeft="@dimen/padingleft"
		            android:text="@string/u_rate"
		            android:textColor="@color/text_dark"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
		    	
		    	<Button 
		            android:id="@+id/feedbackBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:paddingLeft="@dimen/padingleft"
		            android:text="@string/feedback"
		            android:textColor="@color/text_dark"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
	    	</LinearLayout>
	    	
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:background="@color/white">
		    	
