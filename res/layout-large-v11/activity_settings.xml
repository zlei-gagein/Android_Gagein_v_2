<!-- 		                android:text="@string/version" -->
<!-- 		                android:textColor="@color/text_dark" -->
<!-- 		                android:textSize="@dimen/button_text_size" -->
<!-- 		                /> -->
		            
<!-- 		            <TextView  -->
<!-- 		                android:id="@+id/version" -->
<!-- 		                android:layout_width="wrap_content" -->
<!-- 		                android:layout_height="wrap_content" -->
<!-- 		                android:layout_alignParentRight="true" -->
<!-- 		                android:layout_marginRight="@dimen/marginright" -->
<!-- 		                android:textColor="@color/text_weak" -->
<!-- 		                android:textSize="@dimen/button_text_size" -->
<!-- 		                /> -->
		            
<!-- 		        </RelativeLayout> -->
		        
<!-- 		    	<include layout="@layout/lines"/> -->
		    
		    	<Button 
		            android:id="@+id/termsBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:text="@string/terms_of_service"
		            android:textColor="@color/text_dark"
		            android:paddingLeft="@dimen/padingleft"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
		    	
		        <Button 
		            android:id="@+id/privacyPolicyBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:text="@string/privacy_policy"
		            android:paddingLeft="@dimen/padingleft"
		            android:textColor="@color/text_dark"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		        
		    	
		    
		    	<RelativeLayout 
		            android:layout_width="fill_parent"
		            android:visibility="gone"
		            android:layout_height="@dimen/edit_hight">
		            
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/tutorial"
		                android:textColor="@color/text_dark"
		                android:textSize="@dimen/button_text_size"
		                android:layout_centerVertical="true"
		                />
		            
		            <Button 
		                android:id="@+id/tutorialBtn"
		                android:layout_width="wrap_content"
		                android:layout_height="38dp"
		                android:layout_centerVertical="true"
		                android:layout_alignParentRight="true"
		                android:layout_marginRight="@dimen/marginright"
		                android:textColor="@color/text_weak"
		                android:textSize="@dimen/button_text_size"
		                android:background="@drawable/tutorial_off"
		                />
		            
		        </RelativeLayout>
		        
		    	<include layout="@layout/lines"/>
		    	
		    	<Button 
		            android:id="@+id/loginOutBtn"
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/edit_hight"
		            android:text="@string/log_out"
		            android:textColor="@color/text_dark"
		            android:paddingLeft="@dimen/padingleft"
		            android:textSize="@dimen/button_text_size"
		            android:background="@null"
		            android:gravity="left|center_vertical"
		            android:paddingRight="@dimen/marginright"
		            />
		    	
		    	<include layout="@layout/lines"/>
		    	
		    	<RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/copyright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/copyright"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/text_weak"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/versionCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="@string/version_code"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_weak"
                        android:textSize="12sp" />
                </RelativeLayout>
	    	</LinearLayout>
	
	    </LinearLayout>
    </ScrollView>
    
    <TextView 
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/top"
        android:background="@color/black"
        android:layout_alignParentRight="true"
        />
    
</RelativeLayout>